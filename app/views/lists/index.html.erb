<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=925&q=80');">
  <div class="container">
    <h1>Create your movie lists! <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <img alt="" width="200" src="https://unsplash.com/photos/03QJho_p0AU"/>
            <%= list.name %>
            <small class="text-right flex-shrink-0"><%= link_to list_path(list.id), method: :delete, data: { confirm: "Delete #{list.name}?" } do %></p></small>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<%= link_to "Create a movie list", new_list_path, class: "btn-ghost" %>
<a class="btn btn-flat" href="#">Book now</a>